<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ResearchHub.App.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="ResearchHub.App.Views.DashboardView"
             x:DataType="vm:DashboardViewModel">

    <Grid RowDefinitions="Auto,Auto,*" Margin="20">
        <!-- Welcome Section -->
        <StackPanel Grid.Row="0" Spacing="10" Margin="0,0,0,30">
            <TextBlock Text="{Binding WelcomeMessage}"
                       FontSize="28" FontWeight="Bold"/>
            <TextBlock Text="Manage your systematic reviews and literature research"
                       FontSize="14" Foreground="Gray"/>
        </StackPanel>

        <!-- Error State -->
        <Border Grid.Row="1" Padding="10" Margin="0,0,0,10" CornerRadius="4"
                Background="#1AE74C3C"
                IsVisible="{Binding HasError}">
            <TextBlock Foreground="#E74C3C" TextWrapping="Wrap">
                <Run Text="&#x26A0;"/>
                <Run Text=" "/>
                <Run Text="{Binding ErrorMessage}"/>
            </TextBlock>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" ColumnDefinitions="*,*">
            <!-- Create New Project -->
            <Border Grid.Column="0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                    CornerRadius="8" Padding="20" Margin="0,0,10,0">
                <StackPanel Spacing="15" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Start a New Project" FontSize="18" FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Create a new systematic review or research project"
                               TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"
                               Foreground="Gray"/>
                    <Button Content="Create Project"
                            Command="{Binding CreateProjectCommand}"
                            HorizontalAlignment="Center"
                            Padding="20,10"/>
                </StackPanel>
            </Border>

            <!-- Recent Projects -->
            <Border Grid.Column="1" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                    CornerRadius="8" Padding="20" Margin="10,0,0,0">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Grid.Row="0" Text="Recent Projects" FontSize="18" FontWeight="SemiBold"
                               Margin="0,0,0,15"/>
                    <ScrollViewer Grid.Row="1">
                        <ItemsControl ItemsSource="{Binding RecentProjects}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Margin="0,5" Padding="15,10"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Left"
                                            Command="{Binding $parent[ItemsControl].((vm:DashboardViewModel)DataContext).OpenProjectCommand}"
                                            CommandParameter="{Binding}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding CreatedAt, StringFormat='Created: {0:MMM d, yyyy}'}"
                                                       FontSize="11" Foreground="Gray"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <TextBlock Grid.Row="1" Text="No recent projects"
                               IsVisible="{Binding !RecentProjects.Count}"
                               Foreground="Gray" VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
